<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  console.log("Map Token in show.ejs:", mapToken);
  const coordinatesJSON = "<%- JSON.stringify(listing.geometry && listing.geometry.coordinates ? listing.geometry.coordinates : []) %>";
  const coordinates = JSON.parse(coordinatesJSON);
</script>
<style>
    .star-gold { color: #FFD700; }
</style>

<div class="row mt-3">
    <div class="col-md-6 offset-md-3 text-center">
        <h3 class="mb-3"><%= listing.title %></h3>
        <div class="card show-card listing-card">
            <img src="<%= (typeof listing.image === 'object' && listing.image.url) ? listing.image.url : (typeof listing.image === 'string' && listing.image ? listing.image : '/images/placeholder.jpg') %>" class="card-img-top show-img" alt="listing_image" width="600" height="500" />
            <div class="card-body">
                <p class="card-text">
                  <% if (listing.owner) { %>
                    <i>Owned by <%= listing.owner.username %></i><br/>
                  <% } else { %>
                    <i>Owner information not available</i><br/>
                  <% } %>
                    Description: <br/><%= listing.description %> <br>
                    &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                    <%= listing.location %> <br>
                    <%= listing.country %> <br>
                </p>
            </div>
        </div>
    </div>
    
    <br />
<% if(currUser && listing.owner._id.equals(currUser._id)) {%>
    <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-deep-red edit-btn offset-4">Edit</a>

    <a href="/listings" class="btn btn-deep-red">Back</a>
      
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
    <button class="btn btn-deep-red">Delete</button>
</form>
    </div>
     
        
     <% } %>  
     <div class="col-8 offset-3">
      <% if(currUser) {%>
        <hr />
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-heart">
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="5"></label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="4"></label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="3"></label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="2"></label>
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="1"></label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        class="form-control"
        required
        ></textarea>
        <div class="invalid-feedback">Please enter some comment for review.</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr />
    <% } %>

  <% if(listing.reviews.length > 0) { %>
    <p><b>All Reviews</b></p>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(review of listing.reviews){ %>
            <div class="col mb-3">
                <div class="card review-card">
                    <div class="card-body">
                        <h5 class="card-title"><% if(review.author) { %><%= review.author.username %><% } else { %>Anonymous<% } %></h5>
                        <p class="card-text">Rating: <%= review.rating %> Star<%= review.rating === 1 ? '' : 's' %>
                            <% for(let i=1; i<=review.rating; i++) { %>
                                <i class="fas fa-star text-warning"></i>
                            <% } %>
                            <% for(let i=review.rating + 1; i<=5; i++) { %>
                                <i class="far fa-star"></i>
                            <% } %>
                        </p>
                        <p class="card-text"><%= review.comment %></p>
                        <% if(currUser && review.author && review.author._id.equals(currUser._id)) { %>
                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-dark">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
  <% } %>
     </div>
     </div>
    <div class="col-8 offset-3 mb-3">
      <h3 style="margin-left: 30px;">Where you will be</h3>
      <div id="map" style="width: 100%; height: 400px; margin-left: 30px; border-radius: 10px; overflow: hidden;"></div>
    </div>
    
</div>
</div>

<script src="/js/map.js"></script>

