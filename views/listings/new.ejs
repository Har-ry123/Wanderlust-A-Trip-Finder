<% layout("/layouts/boilerplate") %>
  <div class="row">
    <div class="col-8 offset-2">
        <br /><br />
<h3>Create a New Listing</h3>
    
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" placeholder="enter title" class="form-control" required/>
          <div class="valid-feedback">Title looks good!</div>    
    </div>
        
        <div class="mb-2">
            <label for="title" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="enter Description" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter a short description</div>    
        </div>
        
       

        
        <div class="mb-2">
            <label for="image" class="form-label">Upload New Image</label>
        <input name="image" type="file" class="form-control" required/>
       </div>
        
        <div class="row">
            <div class="mb-2 col-md-4">
                <label for="price" class="form-label">Price</label>
            <input name="listing[price]"  placeholder="enter price" class="form-control" required/>
           <div class="invalid-feedback">Please enter a valid price</div>    
        </div>
            
            <div class="mb-2 col-md-8">
                <label for="country" class="form-label">Enter Country</label>
            <input name="listing[country]" type="text" placeholder="enter country" class="form-control" required/>
            <div class="invalid-feedback">Please enter a country name</div>       
        </div>
        </div>

        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select name="listing[category]" class="form-select">
                <option value="">Select a category</option>
                <option value="Rooms">Rooms</option>
                <option value="Iconic cities">Iconic cities</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Amazing Pools">Amazing Pools</option>
                <option value="Beach">Beach</option>
                <option value="Lakefront">Lakefront</option>
                <option value="Amazing Views">Amazing Views</option>
                <option value="Boats">Boats</option>
                <option value="Arctic">Arctic</option>
                <option value="Tents">Tents</option>
                <option value="Cabins">Cabins</option>
                <option value="Castles">Castles</option>
                <option value="Countryside">Countryside</option>
                <option value="New">New</option>
            </select>
            <div class="invalid-feedback">Please select a category</div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
        <input name="listing[location]" type="text" placeholder="enter location" class="form-control" required/>
        <div class="invalid-feedback">Please enter a valid location</div>       
    </div>
        
        <button class="btn btn-deep-red">Add</button>
    </form>
    <br /><br />
    <a href="/listings" class="btn btn-deep-red">Back to Listings</a>

  </div>
  </div>